          <!-- 1 -->
          <div class="option">
            <input tabindex="0" type="radio" name="_purpose" id="purpose_business" value="business"> 
            <label class="option-label" for="purpose_business">
              <div class="content">
                <div class="title">My business</div>
              </div>
            </label>
          </div>
          <!-- 2 -->
          <div class="option">
            <input tabindex="0" type="radio" name="_purpose" id="purpose_career" value="career"> 
            <label class="option-label" for="purpose_career">
              <div class="content">
                <div class="title">My career</div>
              </div>
            </label>
          </div>
          <!-- 3 -->
          <div class="option">
            <input tabindex="0" type="radio" name="_purpose" id="purpose_personal" value="personal">
            <label class="option-label" for="purpose_personal">
              <div class="content">
                <div class="title">Personal use</div>
              </div>
            </label>
          </div>

          <!-- 5 -->
          <div class="option">
            <input tabindex="0" type="radio" name="_purpose" id="purpose_gift" value="gift"> 
            <label class="option-label" for="purpose_gift">
              <div class="content">
                <div class="title">Present for a friend</div>
              </div>
            </label>
          </div>
                    <!-- 4 -->
          <div class="option">
            <input tabindex="0" type="radio" name="_purpose" id="purpose_other" value="other"> 
            <label class="option-label" for="purpose_other">
              <div class="content">
                <div class="title">Other</div>
              </div>
            </label>
          </div>
          
        </div>
      </div>
      <!-- There was a Logo Row -->

      <!-- Use Row -->
      <div class="block4 question-wrapper form-row child-questions row-small">
        <div class="title-wrapper">
          <h2>Where are you planning to use your logo?</h2>
          <h4>Choose one or more options</h4>
        </div>
        <div class="option-selector purpose">
          <!-- 1 -->
          <div class="option">
            <input tabindex="0" type="checkbox" name="_whereWillBeUsed" id="whereWillBeUsed_website" value="website"> 
            <label class="option-label" for="whereWillBeUsed_website">
              <div class="content">
                <div class="title">Website</div>
              </div>
            </label>
          </div>
          <!-- 2 -->
          <div class="option">
            <input tabindex="0" type="checkbox" name="_whereWillBeUsed" id="whereWillBeUsed_social-media" value="social-media"> 
            <label class="option-label" for="whereWillBeUsed_social-media">
              <div class="content">
                <div class="title">Social Media</div>
              </div>
            </label>
          </div>
          <!-- 3 -->
          <div class="option">
            <input tabindex="0" type="checkbox" name="_whereWillBeUsed" id="whereWillBeUsed_printed-materials" value="printed-materials">
            <label class="option-label" for="whereWillBeUsed_printed-materials">
              <div class="content">
                <div class="title">Printed Materials</div>
              </div>
            </label>
          </div>
          <!-- 4 -->
          <div class="option">
            <input tabindex="0" type="checkbox" name="_whereWillBeUsed" id="whereWillBeUsed_email-signature" value="email-signature"> 
            <label class="option-label" for="whereWillBeUsed_email-signature">
              <div class="content">
                <div class="title">Email Signature</div>
              </div>
            </label>
          </div>
          <!-- 5 -->
          <div class="option">
            <input tabindex="0" type="checkbox" name="_whereWillBeUsed" id="whereWillBeUsed_storefront" value="storefront"> 
            <label class="option-label" for="whereWillBeUsed_storefront">
              <div class="content">
                <div class="title">Storefront/Large Surfaces</div>
              </div>
            </label>
          </div>
          <!-- 6 -->
          <div class="option">
            <input tabindex="0" type="checkbox" name="_whereWillBeUsed" id="whereWillBeUsed_other" value="other"> 
            <label class="option-label" for="whereWillBeUsed_other">
              <div class="content">
                <div class="title">Other</div>
              </div>
            </label>
          </div>
        </div>
      </div>
